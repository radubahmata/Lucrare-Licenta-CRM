<Window x:Class="CRMAgentieImobiliara.WindowCreareCont"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRMAgentieImobiliara"
        mc:Ignorable="d"
        Title="Creare cont" Height="340" Width="300" FontSize="14" Background="#2e3137">
    <Grid>
        <StackPanel Margin="20,20,19.6,0.4">
            <Label Content="Register" Foreground="White" FontSize="25" HorizontalAlignment="Center"/>
            <Separator Height="2" Margin="0,2,-0.4,2"></Separator>
            <Label Content="Nume utilizator" Foreground="White"/>
            <TextBox Name="txtloginUsername" />
            <Label Content="Parola" Foreground="White"/>
            <PasswordBox Name="txtloginPassword" />
            <Label Content="Confirma parola" Foreground="White"/>
            <PasswordBox x:Name="txtloginPasswordConfirm" />
            <Button x:Name="btnRegisterSubmit" Click="btnRegisterSubmit_Click"  Margin="60,20,59.6,20" Content="Creeaza cont" />
            <Button Name="btnBack" Content="Inapoi la Login" Click="btnBack_Click" Background="#2e3137" Foreground="White" Margin="60,0,59.6,0" Height="22"/>
        </StackPanel>
    </Grid>
</Window>
